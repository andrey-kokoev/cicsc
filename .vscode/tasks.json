{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cicsc:autoassign:launch-on-open",
      "type": "shell",
      "command": "./control-plane/autoassign.sh --loop",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "cicsc:autoassign:stop",
      "type": "shell",
      "command": "bash -lc 'if [[ -f state/autoassign.pid ]]; then kill \"$(cat state/autoassign.pid)\" && rm -f state/autoassign.pid; echo \"Stopped autoassign\"; else pkill -f \"control-plane/autoassign.sh --loop\" >/dev/null 2>&1 && echo \"Stopped autoassign\" || echo \"No autoassign process found\"; fi'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "cicsc:agentd:run-codex",
      "type": "shell",
      "command": "bash -lc 'export AGENT_ID=AGENT_CODEX; ./control-plane/agentd.sh run --agent \"$AGENT_ID\"'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "cicsc:agentd:stop-codex",
      "type": "shell",
      "command": "bash -lc 'export AGENT_ID=AGENT_CODEX; ./control-plane/agentd.sh stop --agent \"$AGENT_ID\"'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "cicsc:agentd:status-codex",
      "type": "shell",
      "command": "bash -lc 'export AGENT_ID=AGENT_CODEX; ./control-plane/status.sh --agent \"$AGENT_ID\" --json'",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
