{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cicsc/objective-model.schema.json",
  "title": "Objective Model",
  "type": "object",
  "required": ["version", "objectives"],
  "properties": {
    "version": { "type": "string" },
    "source": {
      "type": "object",
      "properties": {
        "genesis_dir": { "type": "string" }
      },
      "additionalProperties": false
    },
    "objectives": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "success_signals"],
        "properties": {
          "id": { "type": "string", "pattern": "^OBJ[0-9]+$" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "success_signals": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["type", "ref"],
              "properties": {
                "type": { "type": "string" },
                "ref": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
