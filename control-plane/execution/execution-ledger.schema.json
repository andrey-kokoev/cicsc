{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cicsc/execution-ledger.schema.json",
  "title": "Execution Ledger Model",
  "type": "object",
  "required": ["version", "status_source_mode", "phases"],
  "properties": {
    "version": { "type": "string" },
    "status_source_mode": {
      "type": "string",
      "enum": ["roadmap_md_canonical", "execution_ledger_yaml_canonical"]
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "number", "title", "status", "milestones"],
        "properties": {
          "id": { "type": "string", "pattern": "^[A-Z]{1,2}$" },
          "number": { "type": "integer", "minimum": 1 },
          "title": { "type": "string" },
          "status": { "type": "string", "enum": ["planned", "active", "complete"] },
          "milestones": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "title", "checkboxes"],
              "properties": {
                "id": { "type": "string", "pattern": "^[A-Z]{1,2}[0-9]+$" },
                "title": { "type": "string" },
                "checkboxes": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "object",
                    "required": ["id", "title", "status"],
                    "properties": {
                      "id": { "type": "string", "pattern": "^[A-Z]{1,2}[0-9]+\\.[0-9]+$" },
                      "title": { "type": "string" },
                      "status": { "type": "string", "enum": ["open", "done"] }
                    },
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
