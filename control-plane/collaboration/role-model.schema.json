{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cicsc/role-model.schema.json",
  "title": "Role Model",
  "description": "Defines collaboration roles and their authorities within WMCC",
  "type": "object",
  "required": ["version", "roles", "authority_matrix"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version identifier"
    },
    "roles": {
      "type": "array",
      "description": "Defined collaboration roles",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "authorities"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Role identifier (e.g., main, worker)",
            "pattern": "^[a-z_]+$"
          },
          "description": {
            "type": "string",
            "description": "Human-readable role purpose"
          },
          "authorities": {
            "type": "array",
            "description": "List of authorities held by this role",
            "items": {
              "type": "string",
              "enum": [
                "dispatch",
                "completion",
                "governance",
                "delegation",
                "execution",
                "observation"
              ]
            }
          },
          "obligation_profile": {
            "type": ["string", "null"],
            "description": "Obligation profile for fulfillments (null if role doesn't fulfill)"
          },
          "proactive": {
            "type": "boolean",
            "description": "Whether role drives workflow state (true) or reacts to it (false)"
          }
        },
        "additionalProperties": false
      }
    },
    "authority_matrix": {
      "type": "array",
      "description": "Decision-to-authority mapping",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["decision", "decision_ref", "authority"],
        "properties": {
          "decision": {
            "type": "string",
            "description": "Human-readable decision name"
          },
          "decision_ref": {
            "type": "string",
            "description": "Machine-readable reference to decision point in control-plane models"
          },
          "authority": {
            "type": "string",
            "description": "Role id that holds authority for this decision",
            "enum": ["main", "worker", "shared"]
          },
          "notes": {
            "type": "string",
            "description": "Optional rationale or constraints"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
