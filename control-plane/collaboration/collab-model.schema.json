{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cicsc/collab-model.schema.json",
  "title": "Collaboration Model",
  "type": "object",
  "required": [
    "version",
    "agents",
    "claim_kinds",
    "evidence_kinds",
    "obligation_profiles",
    "execution_bindings",
    "handoff_protocol",
    "message_transition_policy",
    "assignments",
    "message_kinds",
    "messages",
    "message_events"
  ],
  "properties": {
    "version": { "type": "string" },
    "agents": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "kind", "worktree"],
        "properties": {
          "id": { "type": "string", "pattern": "^AGENT_[A-Z0-9_]+$" },
          "kind": { "type": "string", "enum": ["human", "automation"] },
          "worktree": { "type": "string" },
          "branch_prefixes": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "claim_kinds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "required_obligation_profile_refs"],
        "properties": {
          "id": { "type": "string", "pattern": "^CLAIM_[A-Z0-9_]+$" },
          "title": { "type": "string" },
          "required_obligation_profile_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^OBLIG_[A-Z0-9_]+$" }
          }
        },
        "additionalProperties": false
      }
    },
    "evidence_kinds": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "artifact_type"],
        "properties": {
          "id": { "type": "string", "pattern": "^EVID_[A-Z0-9_]+$" },
          "title": { "type": "string" },
          "artifact_type": { "type": "string", "enum": ["theorem", "test_log", "artifact", "script"] }
        },
        "additionalProperties": false
      }
    },
    "obligation_profiles": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "claim_kind_refs", "required_evidence", "required_scripts"],
        "properties": {
          "id": { "type": "string", "pattern": "^OBLIG_[A-Z0-9_]+$" },
          "claim_kind_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^CLAIM_[A-Z0-9_]+$" }
          },
          "required_evidence": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["evidence_kind_ref", "min_count"],
              "properties": {
                "evidence_kind_ref": { "type": "string", "pattern": "^EVID_[A-Z0-9_]+$" },
                "min_count": { "type": "integer", "minimum": 1 }
              },
              "additionalProperties": false
            }
          },
          "required_scripts": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    },
    "execution_bindings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["objective_ref", "capability_ref", "claim_kind_refs", "ledger_checkbox_refs"],
        "properties": {
          "objective_ref": { "type": "string", "pattern": "^OBJ[0-9]+$" },
          "capability_ref": { "type": "string", "pattern": "^CAP[0-9]+$" },
          "claim_kind_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^CLAIM_[A-Z0-9_]+$" }
          },
          "ledger_checkbox_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^[A-Z]{1,2}[0-9]+\\.[0-9]+$" }
          }
        },
        "additionalProperties": false
      }
    },
    "handoff_protocol": {
      "type": "object",
      "required": [
        "branch_pattern",
        "commit_subject_pattern",
        "required_commit_body_tokens",
        "required_gate_scripts"
      ],
      "properties": {
        "branch_pattern": { "type": "string" },
        "commit_subject_pattern": { "type": "string" },
        "required_commit_body_tokens": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "required_gate_scripts": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "message_transition_policy": {
      "type": "object",
      "required": ["initial_statuses", "terminal_statuses", "allowed_transitions"],
      "properties": {
        "initial_statuses": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "terminal_statuses": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },
        "allowed_transitions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["from", "to"],
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "assignments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "agent_ref",
          "checkbox_ref",
          "claim_kind_ref",
          "worktree",
          "branch",
          "status"
        ],
        "properties": {
          "id": { "type": "string", "pattern": "^ASSIGN_[A-Z0-9_]+$" },
          "agent_ref": { "type": "string", "pattern": "^AGENT_[A-Z0-9_]+$" },
          "checkbox_ref": { "type": "string", "pattern": "^[A-Z]{1,2}[0-9]+\\.[0-9]+$" },
          "claim_kind_ref": { "type": "string", "pattern": "^CLAIM_[A-Z0-9_]+$" },
          "worktree": { "type": "string" },
          "branch": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["assigned", "in_progress", "submitted", "ingested", "done", "blocked"]
          },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "message_kinds": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "description"],
        "properties": {
          "id": { "type": "string", "pattern": "^MSGK_[A-Z0-9_]+$" },
          "title": { "type": "string" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "kind_ref",
          "assignment_ref",
          "from_agent_ref",
          "to_agent_ref",
          "from_worktree",
          "to_worktree",
          "branch",
          "initial_status",
          "payload_refs",
          "evidence_refs",
          "evidence_bindings"
        ],
        "properties": {
          "id": { "type": "string", "pattern": "^MSG_[A-Z0-9_]+$" },
          "kind_ref": { "type": "string", "pattern": "^MSGK_[A-Z0-9_]+$" },
          "assignment_ref": { "type": "string", "pattern": "^ASSIGN_[A-Z0-9_]+$" },
          "from_agent_ref": { "type": "string", "pattern": "^AGENT_[A-Z0-9_]+$" },
          "to_agent_ref": { "type": "string", "pattern": "^AGENT_[A-Z0-9_]+$" },
          "from_worktree": { "type": "string" },
          "to_worktree": { "type": "string" },
          "branch": { "type": "string" },
          "initial_status": {
            "type": "string",
            "enum": ["queued", "sent", "acknowledged", "fulfilled", "rejected", "rescinded", "ingested", "closed"]
          },
          "payload_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          },
          "evidence_refs": {
            "type": "array",
            "items": { "type": "string" }
          },
          "evidence_bindings": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["ref", "commit", "digest"],
              "properties": {
                "ref": { "type": "string" },
                "commit": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
                "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
              },
              "additionalProperties": false
            }
          },
          "supersedes_message_ref": { "type": "string", "pattern": "^MSG_[A-Z0-9_]+$" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "message_events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "message_ref",
          "from_status",
          "to_status",
          "actor_agent_ref",
          "at_seq",
          "commit",
          "evidence_bindings"
        ],
        "properties": {
          "id": { "type": "string", "pattern": "^MSGEV_[A-Z0-9_]+$" },
          "message_ref": { "type": "string", "pattern": "^MSG_[A-Z0-9_]+$" },
          "from_status": {
            "type": ["string", "null"],
            "enum": [null, "queued", "sent", "acknowledged", "fulfilled", "rejected", "rescinded", "ingested", "closed"]
          },
          "to_status": {
            "type": "string",
            "enum": ["queued", "sent", "acknowledged", "fulfilled", "rejected", "rescinded", "ingested", "closed"]
          },
          "actor_agent_ref": { "type": "string", "pattern": "^AGENT_[A-Z0-9_]+$" },
          "at_seq": { "type": "integer", "minimum": 1 },
          "commit": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
          "evidence_bindings": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["ref", "commit", "digest"],
              "properties": {
                "ref": { "type": "string" },
                "commit": { "type": "string", "pattern": "^[0-9a-f]{7,40}$" },
                "digest": { "type": "string", "pattern": "^sha256:[0-9a-f]{64}$" }
              },
              "additionalProperties": false
            }
          },
          "rescinded_reason": { "type": "string" },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
