{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cicsc/gate-model.schema.json",
  "title": "Gate Model",
  "type": "object",
  "required": ["version", "gates"],
  "properties": {
    "version": { "type": "string" },
    "gates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "scope", "required_scripts"],
        "properties": {
          "id": { "type": "string", "pattern": "^GATE_[A-Z0-9_]+$" },
          "scope": { "type": "string" },
          "required_scripts": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string" }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
