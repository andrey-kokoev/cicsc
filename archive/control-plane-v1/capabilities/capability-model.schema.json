{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cicsc/capability-model.schema.json",
  "title": "Capability Model",
  "type": "object",
  "required": ["version", "capabilities"],
  "properties": {
    "version": { "type": "string" },
    "capabilities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "objective_refs", "title", "observable_checks"],
        "properties": {
          "id": { "type": "string", "pattern": "^CAP[0-9]+$" },
          "objective_refs": {
            "type": "array",
            "minItems": 1,
            "items": { "type": "string", "pattern": "^OBJ[0-9]+$" }
          },
          "title": { "type": "string" },
          "observable_checks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["type", "ref"],
              "properties": {
                "type": { "type": "string" },
                "ref": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
